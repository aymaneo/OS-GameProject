    "version": "0.2.0",
    "configurations": [           
        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to Sextant",
            "executable": "${workspaceFolder}/build/boot/sextant.elf",
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            /*
            "windows": {
                "gdbpath": "C:/sextant/ccompil/gdb7.exe",
                "autorun": [
                ]
            },
            */
            "showDevDebugOutput": true,
            "printCalls": true
        },
    ]    
}